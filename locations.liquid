---
pagination:
  data: locations
  size: 1
  alias: location
permalink: "locations/{{ location.slug }}/index.html"
---

<!DOCTYPE html>
<html lang="en">

  {% include 'head.liquid' %}

  <body>
    {% include 'nav.liquid' %}

    <main class="location-page" id="horizontal">
      <article
        itemscope
        itemtype='https://schema.org/CreativeWork'
        id='{{ location.slug }}'>
        <picture>
          <source
            srcset='{{ location.imagePath }}'
            media='(max-width: 768px), (orientation: portrait)'
            onerror='this.onerror=null;this.src="/Images/Springbrook_National_Park.webp";'>
          <img
            src='{{ location.imagePath }}'
            onerror='this.onerror=null;this.src="/Images/Springbrook_National_Park.webp";'
            alt='{{ location.altTag }}'
            itemprop='image'>
        </picture>
        <div class='InfoPanel'>

          {% include "components/link.liquid"
            , href: location.guideURL
            , text: location.formattedGuide
            , tag: 'h3' %}

          <h1 itemprop='headline'>{{ location.title }}</h1>
          <div class='tags' itemprop='keywords'>

            {% if location.formattedDistance and location.formattedDistance != '0m' %}
              <div class="tag">{{ location.formattedDistance }}</div>
            {% endif %}

            {% if location.formattedDuration and location.formattedDuration != '0min' %}
              <div class="tag">{{ location.formattedDuration }}</div>
            {% endif %}

            {% for tag in location.formattedTags %}
              {% unless tag.group == 'Distance' or tag.group == 'Duration' %}
                <div class="tag">{{ tag.name }}</div>
              {% endunless %}
            {% endfor %}

          </div>
          <p itemprop='description'>{{ location.description }}</p>
          {% if location.googleMapsLink %}

            {%- assign link_text = location.title | append: " on Google Maps" -%}

            {% include "components/link.liquid"
              , href: location.googleMapsLink
              , text: link_text
            %}

          {% endif %}
        </div>
      </article>

    </main>
  </body>
</html>