<? xml version="1.0" encoding="UTF-8" ?>
  <urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <!-- Main Pages -->
  <url>
    <loc>https://exploreyourweekend.com/</loc>
    <changefreq>monthly</changefreq>
    <priority>1.0</priority>
  </url>
  <url>
    <loc>https://exploreyourweekend.com/about/</loc>
    <changefreq>monthly</changefreq>
    <priority>0.5</priority>
  </url>
  <url>
    <loc>https://exploreyourweekend.com/guides/</loc>
    <changefreq>monthly</changefreq>
    <priority>0.9</priority>
  </url>
  <url>
    <loc>https://exploreyourweekend.com/locations/</loc>
    <changefreq>monthly</changefreq>
    <priority>0.9</priority>
  </url>

  <!-- Guides -->
  {%- for guide in collections.guides -%}
    <url>
      <loc>https://exploreyourweekend.com/guides/{{ guide.slug }}/</loc>
      <changefreq>monthly</changefreq>
      <priority>0.8</priority>
    </url>
  {%- endfor -%}

  <!-- Locations -->
  {% for guide in collections.guides %}
    {% for location in guide.sections %}
      <url>
        <loc>https://exploreyourweekend.com/locations/{{ location.slug }}/</loc>
        <changefreq>monthly</changefreq>
        <priority>0.7</priority>
      </url>
    {%- endfor -%}
  {%- endfor -%}

</urlset>