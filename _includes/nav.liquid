<nav>
  <a title="Home" href="/">
    <img src="/ExploreYourWeekendLogoGREEN.svg" alt="Explore Your Weekend">
  </a>
  <a
    title="Menu"
    href="javascript:void(0);"
    onclick="myFunction()">
    <span class="material-symbols-outlined">
      menu
    </span>
  </a>
  <div class="InfoPanel" style="display: none;">
    <div class="tags grid">
      <a href="{{ nav.header[0].url }}">{{ nav.header[0].text }}<span class="material-symbols-outlined">chevron_right</span>
      </a>
      <a href="{{ nav.header[1].url }}" target="_blank">{{ nav.header[1].text }}<span class="material-symbols-outlined">arrow_outward</span>
      </a>
    </div>
    <div class="tags grid col">
      <a href="/" title="Search">
        <span class="material-symbols-outlined">
          search
        </span>Search your weekend...
        <span class="material-symbols-outlined">chevron_right</span>
      </a>

      {% for guide in guides %}
        <a href="/guides/{{ guide.slug | slugify }}/" onclick="myFunction()">
          {{ guide.title }}<span class="material-symbols-outlined">chevron_right</span>
        </a>
      {% endfor %}

      {% for location in locations %}
        <a href="/locations/{{ location.slug | slugify }}/" onclick="myFunction()">
          {{ location.title }}<span class="material-symbols-outlined">chevron_right</span>
        </a>
      {% endfor %}
    </div>
  </div>
</nav>